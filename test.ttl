@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dct:  <http://purl.org/dc/terms/> .
@prefix ex:   <http://example.org/taxonomy/> .

#################################################################
# Dataset metadata
#################################################################

ex:taxonomy
    a skos:ConceptScheme ;
    dct:title "Example SKOS Taxonomy"@en ;
    dct:creator "Example Organization" ;
    dct:license <https://creativecommons.org/licenses/by/4.0/> ;
    dct:created "2026-02-27"^^<http://www.w3.org/2001/XMLSchema#date> .

#################################################################
# Concept Scheme 1 — Product Categories
#################################################################

ex:productScheme
    a skos:ConceptScheme ;
    skos:prefLabel "Product Categories"@en ;
    dct:license <https://creativecommons.org/licenses/by/4.0/> ;
    skos:hasTopConcept ex:electronics , ex:furniture .

ex:electronics
    a skos:Concept ;
    skos:prefLabel "Electronics"@en ;
    skos:inScheme ex:productScheme ;
    skos:narrower ex:laptops , ex:smartphones .

ex:laptops
    a skos:Concept ;
    skos:prefLabel "Laptops"@en ;
    skos:broader ex:electronics ;
    skos:inScheme ex:productScheme .

ex:smartphones
    a skos:Concept ;
    skos:prefLabel "Smartphones"@en ;
    skos:broader ex:electronics ;
    skos:inScheme ex:productScheme .

ex:furniture
    a skos:Concept ;
    skos:prefLabel "Furniture"@en ;
    skos:inScheme ex:productScheme .

#################################################################
# Concept Scheme 2 — Geographic Regions
#################################################################

ex:geoScheme
    a skos:ConceptScheme ;
    skos:prefLabel "Geographic Regions"@en ;
    dct:license <https://creativecommons.org/licenses/by/4.0/> ;
    skos:hasTopConcept ex:europe , ex:asia .

ex:europe
    a skos:Concept ;
    skos:prefLabel "Europe"@en ;
    skos:inScheme ex:geoScheme ;
    skos:narrower ex:netherlands , ex:germany .

ex:netherlands
    a skos:Concept ;
    skos:prefLabel "Netherlands"@en ;
    skos:broader ex:europe ;
    skos:inScheme ex:geoScheme .

ex:germany
    a skos:Concept ;
    skos:prefLabel "Germany"@en ;
    skos:broader ex:europe ;
    skos:inScheme ex:geoScheme .

ex:asia
    a skos:Concept ;
    skos:prefLabel "Asia"@en ;
    skos:inScheme ex:geoScheme .
