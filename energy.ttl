@prefix energy: <http://example.org/energy/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

energy: a skos:ConceptScheme ;
    dct:title "Renewable Energy Taxonomy"@en, 
              "Taxonomie Erneuerbarer Energien"@de ;
    dct:creator "AI Collaborator" ;
    dct:created "2026-02-11"^^xsd:date ;
    dct:description "A bilingual SKOS vocabulary describing types of renewable energy and their sub-categories."@en ;
    dct:license <https://creativecommons.org/publicdomain/zero/1.0/> ;
    skos:hasTopConcept energy:solar, energy:wind, energy:hydro .

# --------------------
# Solar Power
# --------------------

energy:solar a skos:Concept ;
    skos:prefLabel "solar power"@en, "Solarenergie"@de ;
    skos:altLabel "Photovoltaik"@de, "PV"@en ;
    skos:definition "Energy harnessed from sunlight using various technologies."@en ;
    skos:definition "Energie, die mit verschiedenen Technologien aus dem Sonnenlicht gewonnen wird."@de ;
    skos:scopeNote "Includes both thermal and photovoltaic conversion."@en ;
    skos:notation "E001" ;
    skos:topConceptOf energy: ;
    skos:inScheme energy: ;
    skos:related energy:wind .

# --------------------
# Wind Power
# --------------------

energy:wind a skos:Concept ;
    skos:prefLabel "wind power"@en, "Windenergie"@de ;
    skos:definition "The use of air flow through wind turbines to provide mechanical power to turn electric generators."@en ;
    skos:definition "Nutzung von Luftströmungen mittels Windkraftanlagen zur Stromerzeugung."@de ;
    skos:scopeNote "Use for both onshore and offshore wind farms."@en ;
    skos:narrower energy:offshore, energy:onshore ;
    skos:notation "E002" ;
    skos:topConceptOf energy: ;
    skos:inScheme energy: .

# --------------------
# Offshore Wind
# --------------------

energy:offshore a skos:Concept ;
    skos:prefLabel "offshore wind"@en, "Offshore-Wind"@de ;
    skos:definition "Wind farms constructed in bodies of water, usually in the ocean."@en ;
    skos:definition "Windparks, die in Gewässern, meist im Meer, errichtet werden."@de ;
    skos:broader energy:wind ;
    skos:example "The North Sea has several large offshore wind farms."@en ;
    skos:notation "E002.1" ;
    skos:inScheme energy: .

# --------------------
# Onshore Wind
# --------------------

energy:onshore a skos:Concept ;
    skos:prefLabel "onshore wind"@en, "Onshore-Wind"@de ;
    skos:definition "Wind turbines located on land."@en ;
    skos:definition "Windkraftanlagen, die sich an Land befinden."@de ;
    skos:broader energy:wind ;
    skos:notation "E002.2" ;
    skos:inScheme energy: .

# --------------------
# Hydroelectric
# --------------------

energy:hydro a skos:Concept ;
    skos:prefLabel "hydroelectric energy"@en, "Wasserkraft"@de ;
    skos:definition "Electricity produced from generators driven by turbines that convert the potential energy of falling or fast-flowing water."@en ;
    skos:definition "Strom aus Generatoren, die durch Turbinen angetrieben werden, die die Energie von fließendem Wasser umwandeln."@de ;
    skos:narrower energy:runofriver ;
    skos:notation "E003" ;
    skos:topConceptOf energy: ;
    skos:inScheme energy: .

# --------------------
# Run-of-River
# --------------------

energy:runofriver a skos:Concept ;
    skos:prefLabel "run-of-river"@en, "Laufwasserkraft"@de ;
    skos:definition "Hydroelectric generation that harvests energy from flowing water without massive reservoirs."@en ;
    skos:definition "Wasserkraftwerke, die die Energie fließender Gewässer ohne große Stauseen nutzen."@de ;
    skos:broader energy:hydro ;
    skos:notation "E003.1" ;
    skos:changeNote "Added to differentiate from reservoir-based hydro in 2026."@en ;
    skos:inScheme energy: .